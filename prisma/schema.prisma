generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Paper {
  id        Int      @id @default(autoincrement())
  title     String
  author    String
  year      Int
  category  String
  abstract  String
  doi       String
  journal   String
  citations Int
  keywords  String[]
  notes     Note[]
}

model Note {
  id          Int    @id @default(autoincrement())
  userId      Int
  paperId     Int
  noteContent String
  paper       Paper  @relation(fields: [paperId], references: [id])
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}

